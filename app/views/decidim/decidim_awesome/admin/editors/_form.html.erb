<div class="row column decidim_awesome-form">
  <p class="help-text"><%= t ".help.drag_and_drop_supported" %></p>
  <h2 class="card-title"><%= t("admin_space", scope: "decidim.decidim_awesome.admin.editors") %></h2>

  <% [:allow_images_in_full_editor, :allow_images_in_small_editor].each do |key| %>
    <%= form.check_box key %>
    <p class="help-text"><%= t ".help.#{key}" %></p>

    <%= render(partial: "decidim/decidim_awesome/admin/editors/constraints", locals: { key: key, constraints: constraints_for(key) }) %>
  <% end %>

  <h2 class="card-title"><%= t("proposals_space", scope: "decidim.decidim_awesome.admin.editors") %></h2>
  <p class="help-text"><%= t ".help.proposals_space" %></p>

  <% [:allow_images_in_proposals, :use_markdown_in_proposals].each do |key| %>
    <%= form.check_box key %>
    <p class="help-text"><%= t ".help.#{key}" %></p>

    <%= render(partial: "decidim/decidim_awesome/admin/editors/constraints", locals: { key: key, constraints: constraints_for(key) }) %>
  <% end %>

</div>
